  <nav class="navbar navbar-expand-md navbar-dark bg-success" id="navbar">
    <span class="logo">
      <h1> Petals & Bees Shop </h1>
    </span>


<div class="link-container" style="display: flex;">
  <div>
    <ul>
      <% if (user && user.isAdmin) { %>
        <div class="menu">
          <li><a href="/all_products">All Products</a></li>
          <li><a href="/add_product">Add New Product</a></li>
          <li><a href="#">Messages</a></li>
        </div>
        <% } %>

          <% if (user) { %>
            <li><a href="/favourites">My Favourites</a></li>
            <li>
              <form id="logout-form" class="login-form" method="POST" action="/logout">
                <label>Welcome back, <%= user.name %>!</label>
                <button type="submit" class="btn btn-secondary">Logout</button>
              </form>
            </li>
            <% } else { %>
              <li>
                <form id="login-form" class="login-form">
                  <a href="/login">Login</a>
                </form>
              </li>
              <% } %>
